@model EditViewModel

<h2>Edit User</h2>
<hr>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input name="Id" type="hidden" value="@Model.Id">
    <div class="mb-3">
        <label asp-for="FullName"></label>
        <Input asp-for="FullName" class="form-control"></Input>
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <Input asp-for="Email" class="form-control"></Input>
    </div>
    <div class="card">
        <div class="card-header">
            Parola GÃ¼ncelle
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Password"></label>
                <Input asp-for="Password" class="form-control"></Input>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>
                <Input asp-for="ConfirmPassword" class="form-control"></Input>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Roller
        </div>
        <div class="card-body">
            @foreach(var role in ViewBag.Roles)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="" id="@role">
                    <label for="@role" class="form-check-label">@role</label>
                </div>
            }
        </div>
    </div>


    <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
</form>