@model Course



<div class="row">
    <div class="col-4">
        <img src="~/img/@Model.image" class="img-fluid rounded-start" width="">
    </div>
    <div class="col-8">
        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id" class="card-link">@Model.Title</a>
        <p class="card-text">@Model.Description</p>
        <div>
            @if(Model.Tags!=null) {
                @foreach ( var tag in Model.Tags){
                    <span class="badge bg-primary">@tag</span>
                }

            }
          
        </div>
    </div>
</div>