@model Course


<div class="card mb-3" id="kurs_@Model.Id">
    <div class="row">
      <div class="col-4">
          <img src="~/img/@Model.image" class="img-fluid rounded-start" width="">
      </div>
      <div class="col-8">
          <div class="card-body">
            <!-- <a href="/course/details/@Model.Id">
              <h5 class="card-title">@Model.Title</h5>
            </a>
             -->
              <!-- href yerini aşagıda asp'lerle oluşturma şekli -->
             <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id" class="card-link">@Model.Title</a>
            <p class="card-text">@Model.Description</p>
          </div>
      </div>
    </div>
</div>