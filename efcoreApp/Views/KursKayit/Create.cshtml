@model KursKayit

<h2>Kurs Kayıt Ekleme</h2>
        <hr>
<form asp-action="Create" asp-controller="KursKayit" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Ögrenci</label>
        <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs</label>
        <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-control">
            <option value="">Seçiniz</option>

        </select>
    </div>
    

    <button type="submit" class="byn btn-secondary">Kaydet</button>
</form>


<!-- asp-items özelliği, bir Razor görünümünde bir seçim listesine (select list) bir öğe koleksiyonunu bağlamak için kullanılır -->