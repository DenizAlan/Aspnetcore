@model Post

    <div class="row">
        <div class="col-8">
            <div class="bg-white p-4">
                <h1 class="h4 mb-4">@Model.Title</h1>
                <div class="tags">
                    <a href="" class="badge bg-primary bg-opacity-10 text-primary mb-2 fw-bold">İç Mekan</a>
                    <a href="" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Dış Mekan</a>
