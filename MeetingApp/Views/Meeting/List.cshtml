@model List<UserInfo>
  @{
  ViewBag.Title="Toplantıya katılım Listesi";
  }

  <main class="text-center">
    <h1 class="h4">Toplantıya katılım Listesi</h1>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>Ad Soyad</td>
          <td>Katılım Durumu</td>
        </tr>
      </thead>
      <tbody>
        @{int i =0;}
        
        @foreach(var user in Model)
        {
              var durum= user.WillAttend == true? "evet" : "hayır" ;
              var className= user.WillAttend==true ? "table-success" : "table-danger" ;
              if(user.WillAttend==true){
              i++;
              }
              <tr class="@className">
                <td>@user.Name</td>
                <td>@durum</td>
                <td>
                  <a class="btn btn-primary btn-sm" href="/Meeting/Details/@user.Id">Detay</a>
                </td>
              </tr>
        }
      </tbody>
    </table>
    <div class="card">
      <div class="card-body">
          <span>Katılımcı Sayısı @i</span>
      </div>
    </div>
  </main>